<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_layout">
    </LinearLayout>


    <!--    顶栏布局-->
    <RelativeLayout
        android:id="@+id/id_main_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#10000000"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/id_main_title_sel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_topbar_soft"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/id_main_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云服"
            android:layout_toRightOf="@id/id_main_title_sel"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/id_main_title_right_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_topbar_right_search"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/id_main_title_right_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_topbar_right_person"
            android:layout_marginTop="2dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/id_main_title_right_1"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
